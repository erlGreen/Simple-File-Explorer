<Window x:Class="PT2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PT2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar Margin="0,0,588,384">
            <Menu Width="33" VerticalAlignment="Top" HorizontalAlignment="Left">
                <MenuItem Header="File" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <MenuItem Header="Open" Click="OpenDirectoryClick"/>
                    <MenuItem Header="Exit" Click="ExitAppClick"/>
                </MenuItem>
            </Menu>
        </ToolBar>
        <TreeView Name="trv" Margin="0,40,588,36"/>
        <ScrollViewer HorizontalAlignment="Left" Height="379" Margin="209,40,0,0" VerticalAlignment="Top" Width="573">
            <TextBlock Name="fileContent" TextWrapping="Wrap" Height="378"/>
        </ScrollViewer>
        <StatusBar Height="36" VerticalAlignment="Top" Margin="0,388,588,0">
            <TextBlock Height="30" Width="100" Name="txtBox"/>
        </StatusBar>
    </Grid>
</Window>
